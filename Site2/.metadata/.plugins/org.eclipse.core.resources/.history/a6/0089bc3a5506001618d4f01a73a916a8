var name = document.getElementById("dbSearchBox");
var title = document.getElementById("dbSearchBox");
var director = document.getElementById("dbSearchBox");
var year = document.getElementById("dbSearchBox");
function submitSearch(){
	if(name != null)
		document.location.search = "name="+name.value + "&";
	if(name != null)
		document.location.search = "title="+title.value + "&";
	if(name != null)
		document.location.search = "director="+director.value + "&";
	if(name != null)
		document.location.search = "year="+year.value;
	
};